# EPICS settings
export EPICS_TOP=/usr/local/epics
export EPICS_VERSION=3.14.12.6
export EPICS_HOST_ARCH=linux-arm
export EPICS_BASE=${EPICS_TOP}/base
export EPICS_EXTENSIONS=${EPICS_TOP}/extensions
export PATH=$PATH:${EPICS_BASE}/bin/${EPICS_HOST_ARCH}:${EPICS_EXTENSIONS}/bin/${EPICS_HOST_ARCH}
# Needed by PyEpics, etc.
export LD_LIBRARY_PATH=${EPICS_BASE}/lib/${EPICS_HOST_ARCH}
export PYEPICS_LIBCA=${EPICS_BASE}/lib/${EPICS_HOST_ARCH}/libca.so
